<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_play_video_loading_failed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:visibility="gone">

    <ImageView
        android:id="@+id/play_video_loading_failed_exit"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_marginLeft="16px"
        android:layout_marginTop="16px"
        android:src="@drawable/video_play_return"
        android:visibility="gone" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btn_loading_failed_reload"
            android:layout_width="300px"
            android:layout_height="100px"
            android:background="@drawable/video_play_btn_reload_selector" />

        <TextView
            android:id="@+id/tv_loading_failed"
            style="@style/text_size_16_white"
            android:layout_marginTop="10px"
            android:text="@string/video_loading_failed" />
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>