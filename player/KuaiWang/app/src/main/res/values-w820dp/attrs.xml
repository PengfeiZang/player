<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Defines the custom XML attributes supported for a HorizontalListView -->
    <declare-styleable name="HorizontalListView">
        <attr name="dividerWidth" format="dimension" />
        <attr name="android:divider" />
        <attr name="android:requiresFadingEdge" />
        <attr name="android:fadingEdgeLength" />
    </declare-styleable>

    <declare-styleable name="CircleProgress">
        <attr name="barColor" format="color" />
        <attr name="rimColor" format="color" />
        <attr name="circleColor" format="color" />
        <attr name="barWidth" format="dimension" />
        <attr name="rimWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <attr name="borderRadius" format="dimension" />
        <attr name="type">
            <enum name="circle" value="0" />
            <enum name="round" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <attr name="lineSpacing" format="dimension" />
        <attr name="maxLine" format="integer" />
    </declare-styleable>

    <declare-styleable name="PlayerProgressBar">
        <attr name="Player_Teacher_Point_Background" format="color" />
        <attr name="Player_Student_Point_Background" format="color" />
        <attr name="Player_Point_Width" format="dimension" />
        <attr name="Player_Point_Height" format="dimension" />
    </declare-styleable>


    <declare-styleable name="RotateTextView">
        <attr name="degree" format="integer" />
        <attr name="transX" format="dimension" />
        <attr name="transY" format="dimension" />
    </declare-styleable>
</resources>